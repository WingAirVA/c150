<?xml version="1.0"?>

<PropertyList>

    <checklist>
        <title>Before starting the engine</title>
        <item>
            <name>Seats and seat belts - Adjust and Lock</name>
            <value>ADJUST and LOCK</value>
        </item>
        <item>
            <name>Brakes - Test and set</name>
            <value>TEST and SET (shift-B)</value>
            <marker>
                <x-m>1.672</x-m>
                <y-m>-0.447</y-m>
                <z-m>0.002</z-m>
                <scale>2.0</scale>
            </marker>
            <condition>
                <equals>
                    <property>/controls/gear/brake-parking</property>
                    <value>1</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/gear/brake-parking</property>
                <value>1</value>
            </binding>
        </item>
        <item>
            <name>Master Switch - On</name>
            <value>ON</value>
            <marker>
                <x-m>1.673</x-m>
                <y-m>-0.386565</y-m>
                <z-m>-0.0535261</z-m>
                <scale>2.0</scale>
            </marker>
            <condition>
                <and>
                    <property>/controls/engines/engine[0]/master-bat</property>
                    <property>/controls/engines/engine[0]/master-alt</property>
                </and>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine[0]/master-bat</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine[0]/master-alt</property>
                <value>1</value>
            </binding>
        </item>
        <item>
            <name>Fuel Valve Handle - On</name>
            <value>ON</value>
            <condition>
                <equals>
                    <property>/consumables/fuel/tank/selected</property>
                    <value>1</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/consumables/fuel/tank/selected</property>
                <value>1</value>
            </binding>
        </item>
    </checklist>

    <checklist>
        <title>Starting the engine</title>
        <item>
            <name>Carburetor Heat - Cold</name>
            <value>COLD</value>
            <marker>
                <x-m>1.685</x-m>
                <y-m>-0.058</y-m>
                <z-m>0.003</z-m>
                <scale>3.0</scale>
            </marker>
            <condition>
                <equals>
                    <property>/controls/anti-ice/engine[0]/carb-heat</property>
                    <value>0</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/anti-ice/engine[0]/carb-heat</property>
                <value>0</value>
            </binding>
        </item>
        <item>
            <name>Mixture - Rich</name>
            <value>RICH</value>
            <marker>
                <x-m>1.760</x-m>
                <y-m>0.079</y-m>
                <z-m>-0.003</z-m>
                <scale>3.0</scale>
            </marker>
            <condition>
                <greater-than>
                    <property>/controls/engines/engine[0]/mixture-lever</property>
                    <value>0.9</value>
                </greater-than>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>/controls/engines/engine[0]/mixture-lever</property>
                <value>1.0</value>
                <rate>0.5</rate>
            </binding>
        </item>
        
        <item>
            <name>Primer - As Required</name>
            <value>As Required - 1-6 strokes</value>
            <marker>
                <x-m>1.675</x-m>
                <y-m>-0.437</y-m>
                <z-m>-0.047</z-m>
                <scale>2.0</scale>
            </marker>
            <condition>
                <greater-than>
                    <property>/controls/engines/engine[0]/primer</property>
                    <value>2</value>
                </greater-than>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine[0]/primer</property>
                <value>3</value>
            </binding>
        </item>
        <item>
            <name>Ignition switch - Both</name>
            <value>Both</value>
            <value>(press } )</value>
            <marker>
                <x-m>1.684</x-m>
                <y-m>-0.371</y-m>
                <z-m>0.006</z-m>
                <scale>2.0</scale>
            </marker>
            <condition>
                <equals>
                    <property>/controls/engines/engine/c150-magnetos</property>
                    <value>3</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine/c150-magnetos</property>
                <value>3</value>
            </binding>
        </item>
        
        <item>
            <name>Throttle - Open 1/4 inch</name>
            <value>OPEN 1/4 INCH</value>
            <marker>
                <x-m>1.750</x-m>
                <y-m>0.0</y-m>
                <z-m>-0.003</z-m>
                <scale>3.0</scale>
            </marker>
            <condition>
                <and>
                    <greater-than>
                        <property>controls/engines/engine[0]/throttle</property>
                        <value>0.1</value>
                    </greater-than>
                    <less-than>
                        <property>controls/engines/engine[0]/throttle</property>
                        <value>0.4</value>
                    </less-than>
                </and>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>controls/engines/engine[0]/throttle</property>
                <value>0.25</value>
                <rate>0.2</rate>
            </binding>
        </item>
        <item>
            <name>Propeller Area - Clear</name>
            <value>CLEAR</value>
        </item>
        <item>
            <name>Starter - On</name>
            <value>ON</value>
            <value>(press s and hold until the engine starts)</value>
        </item>
    </checklist>

    <checklist>
        <title>Before take-off</title>
        <page>
            <item>
                <name>Parking Brake</name>
                <value>SET (shift-B)</value>
                <condition>
                    <equals>
                        <property>/controls/gear/brake-parking</property>
                        <value>1</value>
                    </equals>
                </condition>
                <binding>
                    <command>property-assign</command>
                    <property>/controls/gear/brake-parking</property>
                    <value>1</value>
                </binding>
            </item>
            <item>
                <name>Seats, Seat Belts, Shoulder Harnesses</name>
                <value>CHECK SECURE</value>
            </item>
            <item>
                <name>Cabin Doors</name>
                <value>CLOSED and LOCKED</value>
                <condition>
                    <and>
                        <equals>
                            <property>sim/model/c150/doors/door[0]/position-norm</property>
                            <value>0</value>
                        </equals>
                        <equals>
                            <property>/sim/model/c150/doors/door[1]/position-norm</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <binding>
                    <command>nasal</command>
                    <script>c150.leftDoor.close();</script>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script>c150.rightDoor.close();</script>
                </binding>
            </item>
            <item>
                <name>Flight Controls</name>
                <value>FREE and CORRECT</value>
            </item>
            <item>
                <name>Flight Instruments</name>
                <value>CHECK and SET</value>
            </item>
            <item>
                <name>Fuel Quantity</name>
                <value>CHECK</value>
            </item>
            <item>
                <name>Elevator Trim</name>
                <value>SET for takeoff</value>
                <marker>
                    <x-m>1.664</x-m>
                    <y-m>-0.057</y-m>
                    <z-m>-0.093</z-m>
                    <scale>3.0</scale>
                </marker>
                <condition>
                    <and>
                        <greater-than>
                            <property>/controls/flight/elevator-trim</property>
                            <value>-0.12</value>
                        </greater-than>
                        <less-than>
                            <property>/controls/flight/elevator-trim</property>
                            <value>0.12</value>
                        </less-than>
                    </and>
                </condition>
                <binding>
                    <command>property-interpolate</command>
                    <property>/controls/flight/elevator-trim</property>
                    <value>-0.0</value>
                    <rate>0.1</rate>
                </binding>
            </item>
            <item>
                <name>Throttle Setting - 1700 RPM</name>
                <value>1700 RPM</value>
                <condition>
                    <and>
                        <greater-than>
                            <property>/engines/engine[0]/rpm</property>
                            <value>1600</value>
                        </greater-than>
                        <less-than>
                            <property>/engines/engine[0]/rpm</property>
                            <value>1800</value>
                        </less-than>
                    </and>
                </condition>
                <binding>
                    <command>property-interpolate</command>
                    <property>controls/engines/engine[0]/throttle</property>
                    <value>0.69</value>
                    <time>1.0</time>
                </binding>
            </item>
            <item>
                <name>Magnetos</name>
                <value>CHECK RPM DROP</value>
                <value>(75 rpm max)</value>
                <marker>
                    <x-m>1.65988</x-m>
                    <y-m>0.254226</y-m>
                    <z-m>0.208282</z-m>
                    <scale>4.0</scale>
                </marker>
            </item>
        </page>
        <page>
            <item>
                <name>Carburetor Heat</name>
                <value>CHECK for RPM drop</value>
            </item>
            <item>
                <name>Suction Gauge</name>
                <value>CHECK</value>
            </item>
            <item>
                <name>Engine Instruments and Ammeter</name>
                <value>CHECK</value>
            </item>
            <item>
                <name>Throttle</name>
                <value>1000 RPM or LESS</value>
                <condition>
                    <less-than>
                        <property>/engines/engine[0]/rpm</property>
                        <value>1050</value>
                    </less-than>
                </condition>
                <binding>
                    <command>property-interpolate</command>
                    <property>controls/engines/engine[0]/throttle</property>
                    <value>0.25</value>
                    <time>1.0</time>
                </binding>
            </item>
            <item>
                <name>Throttle Friction Lock</name>
                <value>ADJUST</value>
            </item>
            <item>
                <name>Landing Light</name>
                <value>ON</value>
                <marker>
                    <x-m>1.66699</x-m>
                    <y-m>-0.126679</y-m>
                    <z-m>-0.00413895</z-m>
                    <scale>2.0</scale>
                </marker>
                <condition>
                    <property>/controls/lighting/landing-lights</property>
                </condition>
                <binding>
                    <command>property-assign</command>
                    <property>/controls/lighting/landing-lights</property>
                    <value type="bool">true</value>
                </binding>
            </item>
            <item>
                <name>Strobe Lights</name>
                <value>ON</value>
                <marker>
                    <x-m>1.66699</x-m>
                    <y-m>-0.160</y-m>
                    <z-m>-0.00413895</z-m>
                    <scale>2.0</scale>
                </marker>
                <condition>
                    <equals>
                        <property>/controls/lighting/strobe</property>
                        <value>1</value>
                    </equals>
                </condition>
                <binding>
                    <command>property-assign</command>
                    <property>/controls/lighting/strobe</property>
                    <value type="bool">true</value>
                </binding>
            </item>
            <item>
                <name>Radios and Avionics</name>
                <value>SET</value>
            </item>
            <item>
                <name>Transponder</name>
                <value>SET code</value>
                <value>(As requested from ATC or 1200 in USA, 7000 rest of the world)</value>
            </item>
            <item>
                <name>Transponder Mode</name>
                <value>ON OR ALT</value>
                <condition>
                    <or>
                        <equals>
                            <property>/instrumentation/transponder/inputs/knob-mode</property>
                            <value>4</value>
                        </equals>
                        <equals>
                            <property>/instrumentation/transponder/inputs/knob-mode</property>
                            <value>5</value>
                        </equals>
                    </or>
                </condition>
            </item>
            <item>
                <name>Autopilot</name>
                <value>OFF</value>
            </item>
            <item>
                <name>Brakes</name>
                <value>RELEASE (shift-b)</value>
                <condition>
                    <not-equals>
                        <property>/controls/gear/brake-parking</property>
                        <value>1</value>
                    </not-equals>
                </condition>
            </item>
        </page>
    </checklist>

    <checklist>
        <title>Normal take-off</title>
        <item>
            <name>Wing Flaps</name>
            <value>SET for takeoff</value>
            <marker>
                <x-m>1.69</x-m>
                <y-m>0.140</y-m>
                <z-m>-0.009</z-m>
                <scale>2.0</scale>
            </marker>
            <condition>
                <less-than>
                    <property>/controls/flight/flaps</property>
                    <value>0.5</value>
                </less-than>
            </condition>
        </item>
        <item>
            <name>Carburetor Heat - Cold</name>
            <value>COLD</value>
            <condition>
                <equals>
                    <property>/controls/anti-ice/engine[0]/carb-heat</property>
                    <value>0</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/anti-ice/engine[0]/carb-heat</property>
                <value>0</value>
            </binding>
        </item>
        <item>
            <name>Throttle - Full "Open"</name>
            <value>Full "Open"</value>
            <condition>
                <greater-than>
                    <property>/engines/engine[0]/rpm</property>
                    <value>2200</value>
                </greater-than>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>controls/engines/engine[0]/throttle</property>
                <value>1.0</value>
                <time>1.0</time>
            </binding>
        </item>
        <item>
            <name>Elevator Control</name>
            <value>Lift nose wheel at 50 mph</value>
        </item>
        <item>
            <name>Climb Speed</name>
            <value>72 MPH until all obstacles are cleared</value>
        </item>
    </checklist>

    <checklist>
        <title>Normal climb</title>
        <item>
            <name>Air Speed</name>
            <value>75 to 80 MPH</value>
        </item>
        <item>
            <name>Power</name>
            <value>Full throttle</value>
            <condition>
                <greater-than>
                    <property>/engines/engine[0]/rpm</property>
                    <value>2200</value>
                </greater-than>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>controls/engines/engine[0]/throttle</property>
                <value>1.0</value>
                <time>1.0</time>
            </binding>
        </item>
        <item>
            <name>Mixture</name>
            <value>Rich (unless engine is rough)</value>
        </item>
    </checklist>

    <checklist>
        <title>Cruising</title>
        <item>
            <name>Power</name>
            <value>2000 to 2750 RPM</value>
            <condition>
                <and>
                    <greater-than>
                        <property>/engines/engine[0]/rpm</property>
                        <value>2000</value>
                    </greater-than>
                    <less-than>
                        <property>/engines/engine[0]/rpm</property>
                        <value>2750</value>
                    </less-than>
                </and>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>controls/engines/engine[0]/throttle</property>
                <value>.75</value>
                <time>1.0</time>
            </binding>
        </item>
        <item>
            <name>Mixture</name>
            <value>Lean to maximum RPM</value>
        </item>
    </checklist>

    <checklist>
        <title>Before landing</title>
        <item>
            <name>Mixture</name>
            <value>Rich</value>
            <condition>
                <greater-than>
                    <property>/controls/engines/engine[0]/mixture-lever</property>
                    <value>0.9</value>
                </greater-than>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>/controls/engines/engine[0]/mixture-lever</property>
                <value>1.0</value>
                <rate>0.5</rate>
            </binding>
        </item>
        <item>
            <name>Carburetor Heat</name>
            <value>Apply full heat before closing throttle</value>
            <condition>
                <equals>
                    <property>/controls/anti-ice/engine[0]/carb-heat</property>
                    <value>1</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/anti-ice/engine[0]/carb-heat</property>
                <value>1</value>
            </binding>
        </item>
        <item>
            <name>Airspeed</name>
            <value>65 to 75 MPH</value>
        </item>
        <item>
            <name>Wing Flaps</name>
            <value>As desired below 100 MPH</value>
        </item>
        <item>
            <name>Airspeed</name>
            <value>60 to 70 MPH with flaps extended</value>
        </item>
    </checklist>

    <checklist>
        <title>Normal landing</title>
        <item>
            <name>Touch down</name>
            <value>Main wheels first</value>
        </item>
        <item>
            <name>Landing Roll</name>
            <value>Lower nose wheel gently</value>
        </item>
        <item>
            <name>Braking</name>
            <value>Minimum required</value>
        </item>
    </checklist>

    <checklist>
        <title>After landing</title>
        <item>
            <name>Wing Flaps</name>
            <value>UP</value>
        </item>
        <item>
            <name>Carburetor Heat - Cold</name>
            <value>COLD</value>
            <condition>
                <equals>
                    <property>/controls/anti-ice/engine[0]/carb-heat</property>
                    <value>0</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/anti-ice/engine[0]/carb-heat</property>
                <value>0</value>
            </binding>
        </item>
    </checklist>

    <checklist>
        <title>Secure aircraft</title>
        <item>
            <name>Mixture</name>
            <value>Idle Cut-off</value>
            <condition>
                <less-than>
                    <property>/controls/engines/engine[0]/mixture-lever</property>
                    <value>0.1</value>
                </less-than>
            </condition>
            <binding>
                <command>property-interpolate</command>
                <property>/controls/engines/engine[0]/mixture-lever</property>
                <value>0.0</value>
                <rate>0.5</rate>
            </binding>
        </item>
        <item>
            <name>All Switches</name>
            <value>OFF</value>
        </item>
        <item>
            <name>Parking Brake</name>
            <value>SET (shift-B)</value>
            <condition>
                <equals>
                    <property>/controls/gear/brake-parking</property>
                    <value>1</value>
                </equals>
            </condition>
            <binding>
                <command>property-assign</command>
                <property>/controls/gear/brake-parking</property>
                <value>1</value>
            </binding>
        </item>
        <item>
            <name>Control Lock</name>
            <value>Installed</value>
        </item>
    </checklist>

</PropertyList>
